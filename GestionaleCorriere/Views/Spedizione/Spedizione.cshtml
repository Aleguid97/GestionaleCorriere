                    @Html.EditorFor(model => model.costoSpedizione, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.costoSpedizione, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.pesoSpedizione, htmlAttributes: new { @class = "control-label col-md-4 mt-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.pesoSpedizione, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.pesoSpedizione, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
