            <div class="form-group">
                @Html.LabelFor(model => model.FK_idCliente, htmlAttributes: new { @class = "control-label col-md-4 mt-3" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.FK_idCliente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FK_idCliente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.dataSpedizione, htmlAttributes: new { @class = "control-label col-md-4 mt-3" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.dataSpedizione, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.dataSpedizione, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.nominativoDestinatario, htmlAttributes: new { @class = "control-label col-md-4 mt-3" })
